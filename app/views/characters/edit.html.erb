<h1>Editing Character</h1>
<%= form_for :character, url: character_path(@character), method: :patch do |f| %>

    <% if @character.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@character.errors.count, "error") %> There was an error saving the character.
          </h2>
          <ul>
            <% @character.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :characterName %>
    </p>

    <p>
      <%= f.label :race %><br>
      <%= f.select :characterRace, ['', 'Dragonborn', 'Drawf', 'Elf', 'Gnome', 'Halfling'] %>
    </p>

    <p>
      <%= f.label :class %><br>
      <%= f.select :characterClass, ['', 'Barbarian', 'Bard', 'Cleric', 'Druid', 'Fighter', 'Monk', 'Paladin', 'Ranger', 'Rogue', 'Sorcerer', 'Warlock', 'Wizard'] %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>

<%= link_to 'all characters', characters_path %><br>
<%= link_to 'home', controller: 'welcome' %>