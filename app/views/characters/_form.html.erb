<%= form_for @character do |f| %>

    <% if @character.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@character.error.count, "error") %> There was an error saving the character.
          </h2>
          <ul>
            <% @character.error.full_messages.each do |msg| %>
                <li><%= msg %> </li>
                </ul>
            <% end %>git
            </div>
    <% end %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :characterName %>
    </p>
<% end %>
