<%= form_for(character) do |f| %>
  <% if character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :alignment %>
    <%= f.select :alignment_lr, ['', 'Lawful', 'Neutral', 'Chaotic'] %>
    <%= f.select :alignment_ud, ['', 'Good', 'Neutral', 'Evil'] %>
  </div>

  <div class="field">
    <%= f.label :experience %>
    <%= f.number_field :experience %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
