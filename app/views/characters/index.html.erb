<h1>all characters</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Race</th>
    <th>Class</th>
  </tr>

  <% @characters.each do |character| %>
      <tr>
        <td><%= character.characterName %></td>
        <td><%= link_to 'Show', character_path(character) %> </td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Delete', character_path(character), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table><br>

<%= link_to 'create character', new_character_path %><br>
